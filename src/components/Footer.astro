import { siteConfig } from "../lib/data.js";
---

<footer class="bg-primary-dark border-t border-border mt-20">
    <div class="container py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Brand Column -->
            <div class="lg:col-span-2">
                <div class="flex items-center gap-3 mb-4">
                    <div
                        class="w-12 h-12 bg-accent rounded-lg flex items-center justify-center"
                    >
                        <span class="text-3xl">ü¶Å</span>
                    </div>
                    <div class="flex flex-col">
                        <span
                            class="font-display font-bold text-xl leading-none text-text"
                        >
                            Le√≥n de Guerrero
                        </span>
                        <span
                            class="text-xs text-text-muted uppercase tracking-wider"
                        >
                            Spirit of the Warrior
                        </span>
                    </div>
                </div>
                <p class="text-text-muted mb-6 max-w-md">
