                    <a
                        href={siteConfig.social.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-10 h-10 rounded-lg bg-primary-light hover:bg-accent hover:text-primary-dark flex items-center justify-center transition-all"
                        aria-label="LinkedIn"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
